<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemPaket_tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paket 1 Hari"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/itemPaket_tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 400.000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/itemPaket_tvDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Paket\nDeskripsi Paket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemPaket_tvNama"
        android:textColor="#fff" />

</androidx.constraintlayout.widget.ConstraintLayout>